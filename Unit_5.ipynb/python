      "cell_type": "code",
      "source": [
        "Numbers= list(range(1,11))\n",
        "for digits in Numbers:\n",
        "  if digits==1:\n",
        "    print(str(digits)+'st')\n",
        "  elif digits==2:\n",
        "    print(str(digits)+'nd')\n",
        "  elif digits==3:\n",
        "    print(str(digits)+'rd')\n",
        "  else:\n",
        "    print(str(digits)+'th')"
      ],
